# Enterprise Marketing AI Agents - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================
# API Keys (Required)
# ============================================================

# OpenAI API Key (Required for embeddings and chat models)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: OpenAI Organization ID
OPENAI_ORG_ID=org-your-org-id-here

# Optional: Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Optional: Serper API Key (for web search)
SERPER_API_KEY=your-serper-api-key-here

# ============================================================
# Embedding Configuration
# ============================================================

# Embedding model to use for vector generation
# Options: text-embedding-3-small, text-embedding-3-large, text-embedding-ada-002
EMBEDDING_MODEL=text-embedding-3-small

# Number of documents to process per batch
EMBEDDING_BATCH_SIZE=100

# Enable content-based caching to avoid re-generating embeddings
EMBEDDING_CACHE_ENABLED=true

# ============================================================
# Vector Store Configuration
# ============================================================

# Vector store type (faiss, chroma, pinecone)
VECTOR_STORE_TYPE=faiss

# Embedding dimension (1536 for text-embedding-3-small, 3072 for text-embedding-3-large)
VECTOR_DIMENSION=1536

# Index type for FAISS
VECTOR_INDEX_TYPE=IVFFlat

# Distance metric (cosine, euclidean, dot_product)
VECTOR_METRIC=cosine

# Directory to persist vector store
VECTOR_PERSIST_DIR=data/embeddings

# ============================================================
# OpenAI API Configuration
# ============================================================

# API request timeout (seconds)
OPENAI_TIMEOUT=60

# Maximum number of retry attempts
OPENAI_MAX_RETRIES=3

# ============================================================
# Redis Configuration (Optional)
# ============================================================

# Enable Redis caching
REDIS_ENABLED=true

# Redis server host
REDIS_HOST=localhost

# Redis server port
REDIS_PORT=6379

# Redis database number
REDIS_DB=0

# Redis password (if required)
REDIS_PASSWORD=

# Cache TTL in seconds (86400 = 24 hours)
REDIS_TTL=86400

# ============================================================
# System Configuration
# ============================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Enable debug mode
DEBUG=false

# Maximum concurrent agents
MAX_CONCURRENT_AGENTS=5

# Handoff timeout in seconds
HANDOFF_TIMEOUT=300

# Maximum retry attempts for operations
MAX_RETRIES=3

# ============================================================
# Logging Configuration
# ============================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable file logging
LOG_FILE_ENABLED=true

# Log file path
LOG_FILE_PATH=logs/app.log

# Maximum log file size in bytes (10485760 = 10MB)
LOG_FILE_MAX_BYTES=10485760

# Number of backup log files to keep
LOG_FILE_BACKUP_COUNT=5

# Enable console logging
LOG_CONSOLE_ENABLED=true

# ============================================================
# Security Configuration
# ============================================================

# Require authentication for API access
AUTHENTICATION_REQUIRED=true

# API key rotation period in days
API_KEY_ROTATION_DAYS=90

# Maximum requests per minute (rate limiting)
MAX_REQUESTS_PER_MINUTE=100

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=localhost,127.0.0.1

# ============================================================
# Notes
# ============================================================

# 1. Never commit the actual .env file with real credentials
# 2. Keep this .env.example file updated with all configuration options
# 3. Use different values for development, staging, and production
# 4. For production, consider using secret management services
# 5. See docs/embedding_model_configuration.md for detailed config guide
